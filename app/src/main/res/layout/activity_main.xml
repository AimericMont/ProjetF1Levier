<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Player_but"
        android:layout_width="181dp"
        android:layout_height="172dp"
        android:onClick="playerSreen"
        android:text="PLAYER"
        app:layout_constraintBottom_toBottomOf="@+id/Team_but"
        app:layout_constraintEnd_toStartOf="@+id/Team_but"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Team_but" />

    <Button
        android:id="@+id/Start_but"
        android:layout_width="181dp"
        android:layout_height="172dp"
        android:onClick="runScreen"
        android:text="START RUN"
        app:layout_constraintBottom_toBottomOf="@+id/Team_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Team_but"
        app:layout_constraintTop_toTopOf="@+id/Team_but" />

    <Button
        android:id="@+id/Team_but"
        android:layout_width="181dp"
        android:layout_height="172dp"
        android:layout_marginBottom="456dp"
        android:text="TEAM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/Team_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403"
        app:srcCompat="@drawable/article" />

    <Button
        android:id="@+id/Result_but"
        android:layout_width="652dp"
        android:layout_height="113dp"
        android:text="RESULTS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Team_but" />

</androidx.constraintlayout.widget.ConstraintLayout>